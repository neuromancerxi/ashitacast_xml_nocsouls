            <ear2 augment="S14968618926288334851">Moldavite Earring</ear2> <!-- MACC +72 -->
            <ring1 augment="S14968618926288334851">Stikini Ring</ring1> <!-- MACC +72 -->
            <ring2 augment="S14968618926288334851">Stikini Ring</ring2> <!-- MACC +72 -->
            <back augment="S14968618926288334851">Immortal's Cape</back> <!-- MACC +72 -->
        </set>
        <set name="Enspell">
            <main augment="S8301439459622419328">Lady Bell</main> <!-- Enspell +40 -->
            <sub augment="S8301439459622419328">Kupo Shield</sub> <!-- Enspell +40 -->
            <ammo augment="S8301439459622419328">Morion Tathlum</ammo> <!-- Enspell +40 -->
            <head augment="S8301439459622419328">Copper Hairpin</head> <!-- Enspell +40 -->
            <neck augment="S8301439459622419328">Silver Name Tag</neck> <!-- Enspell +40 -->
            <ear1 augment="S8301439459622419328">Courage Earring</ear1> <!-- Enspell +40 -->
            <ear2 augment="S8301439459622419328">Courage Earring</ear2> <!-- Enspell +40 -->
            <body augment="S8301439459622419328">Fsh. Tunica</body> <!-- Enspell +40 -->
            <hands augment="S8301439459622419328">Fsh. Gloves</hands> <!-- Enspell +40 -->
            <ring1 augment="S8301439459622419328">Copper Ring</ring1> <!-- Enspell +40 -->
            <ring2 augment="S8301439459622419328">Copper Ring</ring2> <!-- Enspell +40 -->
            <back augment="S8301439459622419328">Warlock's Mantle</back> <!-- Enspell +40 -->
            <waist augment="S8301439459622419328">Silver Mog. Belt</waist> <!-- Enspell +40 -->
            <legs augment="S8301439459622419328">Fisherman's Hose</legs> <!-- Enspell +40 -->
            <feet augment="S8301439459622419328">Fisherman's Boots</feet> <!-- Enspell +40 -->
