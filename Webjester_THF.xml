        <command>/macro book 11</command>
        <command delay="1000">/macro set 2</command>
        <command>/echo [Switching to THF Macros]</command>
        <command>/bind F9 /switch</command>
        <command>/bind F10 /status</command>
        <command>/bind F12 /toggleweap</command>
        <command delay="4000">/lockstyleset 10</command>
    </init>
    <variables>
        <var name="tptype">Standard</var>
        <var name="Weapon">Sandung</var>
    </variables>
    <inputcommands>
        <cmd input="/switch">
            <!-- Cycles through modes in order:
                 1. Standard
                 2. Defensive
                 3. TH
                 4. THMAX
            -->
            <if advanced="$tptype=TH">
                <setvar name="tptype" value="THMAX" />
            </if>
            <elseif advanced="$tptype=Standard">
                <setvar name="tptype" value="Defensive" />
            </elseif>
            <elseif advanced="$tptype=Defensive">
                <setvar name="tptype" value="TH" />
            </elseif>
            <else>
                <setvar name="tptype" value="Standard" />
            </else>
            <doidlegear />
            <command>/echo [$Weapon] [$tptype]</command>
        </cmd>
        <cmd input="/toggleweap">
            <!-- Toggles Between Sandung and Mandau -->
            <if advanced="$Weapon=Sandung">
                <setvar name="Weapon" value="Mandau" />
            </if>
            <else>
                <setvar name="Weapon" value="Sandung" />
            </else>
            <doidlegear />
            <command>/echo [$Weapon] [$tptype]</command>
        </cmd>
        <cmd input="/status">
            <equip>
                <back>Agema Cape</back>
            </equip>
            <doidlegear />
            <command>/echo [$Weapon] [$tptype]</command>
            <if buffactive="4|566">
                <command>/item "Panacea" me</command>
            </if>
            <elseif buffactive="9|15">
                <equip lock="true">
                    <ring2>Purity Ring</ring2>
                </equip>
                <command>/item "Hallowed Water" me</command>
            </elseif>
            <elseif buffactive="6">
                <command>/item "Echo Drops" me</command>
            </elseif>
            <elseif buffactive="11|12|21|128|129|130|131|132|133|134|135|136|137|138|139|140|141|142|144|145|146|147|148|149|174|175|404|557|558|559|560|561|562|563|564|567">
                <command>/item "Panacea" me</command>
            </elseif>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape"> <!-- locks your back slot while Nexus Cape is equipped -->
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged"> <!-- swaps your TP gear depending on what "mode" you're in -->
            <if p_joblevel="99">
                <equip set="$tptype" />
            </if>
            <else> <!-- If not main level 99 (level sync or BCNM), swaps into level 50 gear-->
                <equip set="TP50" />
            </else>
        </if>
        <else> <!-- otherwise if you aren't fighting, put on your idle set -->
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" /> <!-- swap in your Fastcast set before casting -->
    </premagic>
    <midmagic>
        <if ad_skill="bluemagic|enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_name="en*">
            <!--
                Enspell Augment Bonus applies when the spell is cast, not when it procs on melee strike.
            -->
            <equip set="Enspell" />
        </if>
        <if ad_name="Stoneskin|Metallic*|Diamondhide">
            <if buffactive="37">
                <command>/cancel 37</command>
            </if>
        </if>
        <if ad_name="Shock Spikes">
            <if buffactive="38">
                <command>/cancel 38</command>
            </if>
        </if>
    </midmagic>
    <jobability>
        <if eq_back="Nexus Cape"> <!-- locks your back slot while Nexus Cape is equipped -->
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if ad_name="Flee|Steal">
            <equip feet="Pill. Poulaines +3" />
        </if>
        <if ad_name="Hide">
            <equip body="Pillager's Vest +3" />
        </if>
        <if ad_name="Despoil">
            <equip>
                <legs>Skulk. Culottes +1</legs>
                <feet>Skulk. Poulaines +1</feet>
            </equip>
        </if>
        <if ad_name="Conspirator">
            <equip body="Skulker's Vest +1" />
        </if>
        <if ad_name="Accomplice|Collaborator">
            <equip head="Skulker's Bonnet +1" />
        </if>
    </jobability>
    <weaponskill>
        <if p_joblevel="99">
            <if ad_name="Aeolian*|Cyclone|Gust*"> <!-- Magic Weaponskills -->
                <if advanced="$tptype=THMAX">
                    <equip set="AeoTH" />
                </if>
                <else>
                    <equip set="MagWS" />
                </else>
            </if>
            <elseif ad_name="Evisceration"> <!-- Swap in Crit+ Gear for Evis -->
                <if advanced="$tptype=THMAX">
                    <equip set="WSFTPTH">
                        <ear1>Telos Earring</ear1> <!-- +20% -->
                    </equip>
                </if>
                <else>
                    <equip set="WSFTP">
                        <ear1>Telos Earring</ear1> <!-- +20% -->
                    </equip>
                </else>
            </elseif>
            <elseif ad_name="Dancing Edge|Exenterator|Pyrrhic Kleos">
                <if advanced="$tptype=THMAX">
                    <equip set="WSFTPTH" />
                </if>
                <else>
                    <equip set="WSFTP" />
                </else>
            </elseif>
            <else>
                <if advanced="$tptype=THMAX">
                    <equip set="WSTH" />
                </if>
                <else>
                    <equip set="WS" /> <!-- Standard WS Gear -->
                </else>
            </else>
        </if>
        <else> <!-- If not main level 99 (level sync or BCNM), swaps into level 50 gear-->
            <equip set="TP50" />
        </else>
    </weaponskill>
</ashitacast>
