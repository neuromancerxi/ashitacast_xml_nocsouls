<ashitacast>
    <settings>
        <buffupdate>true</buffupdate> <!-- Process Gear changes after gain/lose a buff -->
        <statusupdate>true</statusupdate> <!-- Process Gear changes on status change, weakness, etc -->
        <hpupdate>false</hpupdate> <!-- Process Gear changes when your HP changes -->
        <autoupdate>false</autoupdate> <!-- Process Gear changes automatically, at a fixed interval -->
    </settings>
    <sets>
        <set name="Idle">
            <!--    
                Your default gearset, this will equip when your status changes to idle, change jobs, etc. 
                Put things like Movement Speed+, PDT/DT/MDT- gear, Your default weapons, etc. in this set.
            -->
            <main>Twashtar</main> <!-- ATK +54 STP +10 -->
            <sub>$sub</sub> <!-- ATK +54 STP +10 -->
            <range augment="S6176686717137314381">Fastwater F. Rod</range> <!-- DMG +32-->
            <ammo augment="S7932496139267718469">Minnow</ammo> <!-- MEVA +40 -->
            <head>Pill. Bonnet +3</head> <!-- TA +9 STP + 10 -->
            <body>Pillager's Vest +3</body> <!-- TA +9 STP + 10 -->
            <hands>Plun. armlets +1</hands> <!-- TA +9 STP + 10 -->
            <legs>Pill. Culottes +3</legs> <!-- TA +9 STP + 10 -->
            <feet>Pill. Poulaines +3</feet> <!-- TA +9 STP + 10 -->
            <neck>Loricate Torque +1</neck> <!-- Counter +40 -->
            <waist>Goading Belt</waist> <!-- MEVA +40 -->
            <ear1>Etiolation Earring</ear1> <!-- Counter +40 -->
            <ear2>Cryptic Earring</ear2> <!-- MEVA +40 -->
            <ring1>Defending Ring</ring1> <!-- TA +9 STP + 10 -->
            <ring2>Gelatinous Ring +1</ring2> <!-- TA +9 STP + 10 -->
            <back>Agema Cape</back> <!-- MEVA +40 -->
        </set>
        <set name="TP" baseset="Idle">
            <!--
                This is your Default TP Set. It will start with your Idle set (baseset="Idle"), and 
                replace any of the items in the Idle set with what you list below.
            -->
            <ammo augment="S6176686717137314381">Minnow</ammo> <!-- DMG +32-->
            <neck>Tlamiztli Collar</neck> <!-- TA +12 -->
            <waist>Engraved Belt</waist> <!-- ATK +54 STP +10 -->
            <hands>Pill. armlets +3</hands> <!-- TA +9 STP + 10 -->
            <ear1>Telos Earring</ear1> <!--  Crit +20% -->
            <ear2 augment="S14964323893455334841">Tati Earring</ear2> <!-- ATK +72 -->
            <ring1>Regal Ring</ring1> <!-- TA +9 STP + 10 -->
            <ring2>Rajas Ring</ring2> <!-- TA +9 STP + 10 -->
            <back>Laic Mantle</back> <!-- ATK +54 STP +10 -->
        </set>
        <set name="TP50" baseset="TP"> <!-- STP 110 TA 112 ATK 54 DMG 64 -->
            <range augment="S6176686717137314381">Fastwater F. Rod</range> <!-- DMG +32 -->
            <ammo augment="S6176686717137314381">Minnow</ammo> <!-- DMG +32 -->
            <head augment="S182109392262544240">Eyepatch</head> <!-- STP 10 TA 9 -->
            <body augment="S14964123346741734841">Vgd. Tunica</body> <!-- ATK 54 TA 3 -->
            <hands augment="S182109392262544240">Vgd. Gloves</hands> <!-- STP 10 TA 9 -->
            <legs augment="S182109392262544240">Vagabond's Hose</legs> <!-- STP 10 TA 9 -->
            <feet augment="S182109392262544240">Vagabond's Boots</feet> <!-- STP 10 TA 9 -->
            <neck augment="S182109392262544240">Pile Chain</neck> <!-- STP 10 TA 9 -->
            <waist augment="S182109392262544240">Gold Mog. Belt</waist> <!-- STP 10 TA 9 -->
            <ear1 augment="S182109392262544240">Tranquility Earring</ear1> <!-- STP 10 TA 9 -->
            <ear2 augment="S182109392262544240">Tranquility Earring</ear2> <!-- STP 10 TA 9 -->
            <ring1 augment="S182109392262544240">San d'Orian Ring</ring1> <!-- STP 10 TA 9 -->
            <ring2 augment="S182109392262544240">Ascetic's Ring</ring2> <!-- STP 10 TA 9 -->
            <back augment="S182109392262544240">Rabbit Mantle +1</back> <!-- STP 10 TA 9 -->
        </set>
        <set name="TH" baseset="TP">
            <!--
                This is your TH Set. It will start with your Idle set, do the substitutions that are in 
                TP, and then do any further substitutions that you specify here.
            -->
            <waist>Chaac Belt</waist>
            <hands>Plun. armlets +1</hands>
            <feet>Skulk. Poulaines +1</feet>
        </set>
        <set name="THMAX" baseset="TH">
            <head>Volte Cap</head>
            <body>Volte Jupon</body>
            <legs>Volte Hose</legs>
        </set>
        <set name="DEFTP" baseset="TP">
            <!--
                Defensive TP Set. Swaps in DT/PDT/MDT items on top of TP set.
            -->
            <ammo augment="S7932496139267718469">Minnow</ammo> <!-- MEVA +40 -->
            <neck>Loricate Torque +1</neck> <!-- Counter +40 -->
            <waist>Goading Belt</waist> <!-- MEVA +40 -->
            <ear1>Etiolation Earring</ear1> <!-- Counter +40 -->
            <ear2 augment="S182109392119204240">Tati Earring</ear2> <!-- TA +12 -->
            <ring1>Defending Ring</ring1> <!-- TA +9 STP +10 -->
            <ring2>Gelatinous Ring +1</ring2> <!-- TA +9 STP +10 -->
            <back>Agema Cape</back> <!-- MEVA +40 -->
        </set>        
        <set name="WS" baseset="TP">
            <!--
                Swap your WS Specific Gear into place. Note that regardless of TP or TH mode it will use
                "best in slot" for the WS (your TP set).
            -->
            <ear1 augment="S14964323893455334841">Tati Earring</ear1> <!-- ATK +72 -->
        </set>
        <set name="WSFTP" baseset="WS">
            <neck>Fotia Gorget</neck> <!-- TA +12 -->
            <waist>Fotia Belt</waist> <!-- TA +12 -->
        </set>
        <set name="MagWS" baseset="MACC">
            <!--
                Aeolean Edge, etc, swap in augmented MAB Gear.
            -->
            <neck augment="S7973728454464518565">Baetyl Pendant</neck> <!-- MAB +40 -->
            <ammo augment="S7973728454464518565">Sabiki Rig</ammo> <!-- MAB +40 -->
            <ear1 augment="S7973728454464518565">Choleric Earring</ear1> <!-- MAB +40 -->
            <ear2 augment="S7973728454464518565">Tranquility Earring</ear2> <!-- MAB +40 -->
            <ring1 augment="S7973728454464518565">Stikini Ring +1</ring1> <!-- MAB +40 -->
            <ring2 augment="S7973728454464518565">Stikini Ring +1</ring2> <!-- MAB +40 -->
            <waist augment="S7973728454464518565">Chaac Belt</waist> <!-- MAB +40 -->
            <back augment="S7973728454464518565">Izdubar Mantle</back> <!-- MAB +40 -->
            <head>Volte Cap</head> <!-- MAB +40 -->
            <body>Volte Jupon</body> <!-- MAB +40 -->
            <hands>Volte Bracers</hands> <!-- MAB +40 -->
            <legs>Volte Hose</legs> <!-- MAB +40 -->
            <feet>Volte Boots</feet> <!-- MAB +40 -->
        </set>
        <set name="FastCast">
            <!--
                This is your default pre-cast set. Drop all your Fastcast augmented gear here. FC caps 
                at 80%. You can cap FC with 10 augment slots, 2.5 items.
            -->
            <body augment="S6217489529050814476">Pilgrim Tunica</body> <!-- FC +32 -->
            <ear2 augment="S182152343102764236">Stm. Earring +1</ear2>
            <ear1>Etiolation Earring</ear1>
            <ring2 augment="S6217489529050814476">Ascetic's Ring</ring2> <!-- FC +32 -->
        </set>
        <set name="MACC" baseset="TP">
            <!--
                A MACC Set, for THF?! Yep. This assumes you'll be subbing RDM at somepoint. Having a 
                MACC set will let you land debuffs more handily. The set builds on your TP set using 
                the assumption that your TP Set will be 5/5 AF1 119 +3, so it will benefit from MACC +60 
                from the set bonus.
            -->
            <ammo augment="S14968618926288334851">Sinking Minnow</ammo> <!-- MACC +72 -->
            <neck augment="S14968618926288334851">Voltsurge Torque</neck> <!-- MACC +72 -->
            <waist augment="S14968618926288334851">Virtuoso Belt</waist> <!-- MACC +72 -->
            <ear1 augment="S14968618926288334851">Andoaa Earring</ear1> <!-- MACC +72 -->
            <ear2 augment="S14968618926288334851">Moldavite Earring</ear2> <!-- MACC +72 -->
            <ring1 augment="S14968618926288334851">Stikini Ring</ring1> <!-- MACC +72 -->
            <ring2 augment="S14968618926288334851">Stikini Ring</ring2> <!-- MACC +72 -->
            <back augment="S14968618926288334851">Immortal's Cape</back> <!-- MACC +72 -->
        </set>
        <include>
        </include>
    </sets>
    <init>
        <!--if p_joblevel="99">
            <command>/macro book 11</command>
            <command delay="1000">/macro set 2</command>
            <command>/echo [Switching to THF Macros]</command>
            <command>/bind F9 /switch</command>
            <command>/bind F10 /status</command>
            <command delay="4000">/lockstyleset 10</command>
        </if>
        <else>
            <command>/ac load webjester_noob</command>
        </else-->
        <command>/macro book 11</command>
        <command delay="1000">/macro set 2</command>
        <command>/echo [Switching to THF Macros]</command>
        <command>/bind F9 /switch</command>
        <command>/bind F10 /status</command>
        <command delay="4000">/lockstyleset 10</command>
    </init>
    <variables>
        <var name="switch">1</var>
        <var name="tptype">Standard</var>
        <var name="sub">Mandau</var>
    </variables>
    <inputcommands>
        <cmd input="/switch">
            <if advanced="$switch=2">
                <setvar name="switch" value="0" />
                <setvar name="sub" value="Sandung" />
                <doidlegear />
                <setvar name="tptype" value="THMAX" />
            </if>
            <elseif advanced="$switch=1">
                <setvar name="switch" value="2" />
                <setvar name="sub" value="Mandau" />
                <doidlegear />
                <setvar name="tptype" value="Defensive" />
            </elseif>
            <else>
                <setvar name="switch" value="1" />
                <setvar name="sub" value="Mandau" />
                <doidlegear />
                <setvar name="tptype" value="Standard" />
            </else>
            <command>/echo [$sub] [$tptype]</command>
        </cmd>
        
        <cmd input="/status">
            <equip>
                <back>Agema Cape</back>
            </equip>
            <doidlegear />
            <command>/echo [$sub] [$tptype]</command>
            <if buffactive="4|566">
                <command>/item "Panacea" me</command>
            </if>
            <elseif buffactive="6">
                <command>/item "Echo Drops" me</command>
            </elseif>
            <elseif buffactive="9|15">
                <equip lock="true">
                    <ring2>Purity Ring</ring2>
                </equip>
                <command>/item "Hallowed Water" me</command>
            </elseif>
            <elseif buffactive="11|12|21|128|129|130|131|132|133|134|135|136|137|138|139|140|141|142|144|145|146|147|148|149|174|175|404|557|558|559|560|561|562|563|564|567">
                <command>/item "Panacea" me</command>
            </elseif>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape"> <!-- locks your back slot while Nexus Cape is equipped -->
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged"> <!-- swaps your TP gear depending on what "mode" you're in -->
            <if p_joblevel="99">
                <if advanced="$switch=0">
                    <equip set="THMAX" />
                </if>
                <elseif advanced="$switch=2">
                    <equip set="DEFTP" />
                </elseif>
                <else>
                    <equip set="TP" />
                </else>
            </if>
            <else>
                <equip set="TP50" />
            </else>
        </if>
        <else> <!-- otherwise if you aren't fighting, put on your idle set -->
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" /> <!-- swap in your Fastcast set before casting -->
    </premagic>
    <midmagic>
        <if ad_skill="bluemagic|enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_name="Stoneskin|Metallic*|Diamondhide">
            <if buffactive="37">
                <command>/cancel 37</command>
            </if>
        </if>
        <if ad_name="Shock Spikes">
            <if buffactive="38">
                <command>/cancel 38</command>
            </if>
        </if>
    </midmagic>
    <jobability>
        <if eq_back="Nexus Cape"> <!-- locks your back slot while Nexus Cape is equipped -->
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if ad_name="Flee|Steal">
            <equip feet="Pill. Poulaines +3" />
        </if>
        <if ad_name="Hide">
            <equip body="Pillager's Vest +3" />
        </if>
        <if ad_name="Despoil">
            <equip body="Skulk. Poulaines +1" />
        </if>
    </jobability>
    <weaponskill>
        <if p_joblevel="99">
            <if ad_name="Aeolian*|Cyclone|Gust*"> <!-- Magic Weaponskills -->
                <if advanced="$switch=0">
                    <equip set="THMAX" />
                </if>
                <else>
                    <equip set="MagWS" />
                </else>
            </if>
            <elseif ad_name="Evisceration"> <!-- Swap in Crit+ Gear for Evis -->
                <equip set="WSFTP">
                    <ear1>Telos Earring</ear1> <!-- +20% -->
                </equip>
            </elseif>
            <elseif ad_name="Dancing Edge|Exenterator|Pyrrhic Kleos">
                <if advanced="$switch=0">
                    <equip set="THMAX" />
                </if>
                <else>
                    <equip set="WSFTP" />
                </else>
            </elseif>
            <else>
                <if advanced="$switch=0">
                    <equip set="THMAX" />
                </if>
                <else>
                    <equip set="WS" /> <!-- Standard WS Gear -->
                </else>
            </else>
        </if>
        <else>
            <equip set="TP50" />
        </else>
    </weaponskill>
</ashitacast>
