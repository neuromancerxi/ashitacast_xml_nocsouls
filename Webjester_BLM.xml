    <variables>
        <var name="Weapon">Hvergelmir</var>
        <var name="nuke">Standard</var>
    </variables>
    <inputcommands>
        <!-- Swaps which set (weapon) to base your sets on
             1. Hvergelmir i119v3
             2. Hvergelmir i119 (Empy Farm)
             3. Laevateinn
        -->
        <cmd input="/toggleweap">
            <if advanced="$Weapon=Farm">
                <setvar name="Weapon" value="Laevateinn" />
            </if>
            <elseif advanced="$Weapon=Laevateinn">
                <setvar name="Weapon" value="Hvergelmir" />
            </elseif>
            <else>
                <setvar name="Weapon" value="Farm" />
            </else>
            <doidlegear />
            <command>/echo [$Weapon] [$nuke Nuke]</command>
        </cmd>
        <!-- Switch between Full Damage (standard) or TH (e.g. Dynamis AOE farming)
             1. Nuke in standard gear
             2. Nuke in TH gear
        -->
        <cmd input="/togglenuke">
            <if advanced="$nuke=TH">
                <setvar name="nuke" value="Standard" />
            </if>
            <else>
                <setvar name="nuke" value="TH" />
            </else>
            <doidlegear />
            <command>/echo [$Weapon] [$nuke Nuke]</command>
        </cmd>
        <cmd input="/status">
            <equip>
                <back>Cheviot Cape</back>
            </equip>
            <doidlegear />
            <command>/echo [$Weapon] [$nuke Nuke]</command>
            <if buffactive="4|566">
                <command>/item "Panacea" me</command>
            </if>
            <elseif buffactive="9|15">
                <equip lock="true">
                    <ring2>Purity Ring</ring2>
                </equip>
                <command>/item "Hallowed Water" me</command>
            </elseif>
            <elseif buffactive="6">
                <command>/item "Echo Drops" me</command>
            </elseif>
            <elseif buffactive="11|12|21|128|129|130|131|132|133|134|135|136|137|138|139|140|141|142|144|145|146|147|148|149|174|175|404|557|558|559|560|561|562|563|564|567">
                <command>/item "Panacea" me</command>
            </elseif>
        </cmd>
    </inputcommands>
