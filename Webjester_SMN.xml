<ashitacast>
    <settings>
        <buffupdate>true</buffupdate>
        <statusupdate>true</statusupdate>
        <hpupdate>false</hpupdate>
        <autoupdate>false</autoupdate>
    </settings>
    <sets>
        <set name="Idle">
            <main>$Weapon</main>
            <sub>Elan Strap +1</sub>
            <ammo>Sancus Sachet +1</ammo>
            <head>Convoker's Horn +3</head>
            <body>Shomonjijoe +1</body>
            <hands>Glyphic Bracers +1</hands>
            <legs>Beckoner's Spats</legs>
            <feet>Crier's Gaiters</feet>
            <neck>Caller's Pendant</neck>
            <waist>Regal Belt</waist>
            <ear1 augment="S4444499968423610349">Trq. Earring +1</ear1>
            <ear2>Andoaa Earring</ear2>
            <ring1>Stikini Ring +1</ring1>
            <ring2 augment="S7973728454464518565">Stikini Ring +1</ring2>
            <back>Campestres's Cape</back>
        </set>
        <set name="FastCast">
            <body augment="S6217489529050814476">Pilgrim Tunica</body>
            <waist>Witful Belt</waist>
            <ring2 augment="S6217489529050814476">Ascetic's Ring</ring2>
        </set>
        <set name="Nuke">
            <main>$Weapon</main>
            <neck augment="S7973728454464518565">Baetyl Pendant</neck>
            <waist augment="S7973728454464518565">Hachirin-no-Obi</waist>
            <ear1 augment="S7973728454464518565">Choleric Earring</ear1>
            <ear2 augment="S7973728454464518565">Tranquility Earring</ear2>
            <ring1 augment="S7973728454464518565">Stikini Ring +1</ring1>
            <ring2 augment="S7973728454464518565">Stikini Ring +1</ring2>
            <back augment="S7973728454464518565">Izdubar Mantle</back>
        </set>
        <set name="Enfeeble">
            <range augment="S7973728454464518565">Tarutaru F. Rod</range>
            <ammo augment="S14968618926288334851">Sinking Minnow</ammo>
            <neck augment="S14968618926288334851">Voltsurge Torque</neck>
            <waist augment="S14968618926288334851">Virtuoso Belt</waist>
            <ear1 augment="S14968618926288334851">Andoaa Earring</ear1>
            <ear2 augment="S14968618926288334851">Moldavite Earring</ear2>
            <ring1 augment="S14968618926288334851">Stikini Ring</ring1>
            <ring2 augment="S14968618926288334851">Stikini Ring</ring2>
            <back augment="S14968618926288334851">Immortal's Cape</back>
        </set>
        <set name="Perp" baseset="Idle">
            <head>Glyphic Horn +1</head>
            <body>Beckoner's Doublet</body>
            <hands>Glyphic Bracers +1</hands>
            <legs>Convo. Spats +3</legs>
            <feet>Beck. Pigaches</feet>
            <ring1>Evoker's Ring</ring1>
        </set>
        <set name="BPMinus">
            <ammo>Sancus Sachet +1</ammo>
            <head>Glyphic Horn +1</head>
            <body>Glyphic Doublet +1</body>
            <hands>Glyphic Bracers +1</hands>
            <legs>Glyphic Spats +1</legs>
            <feet>Glyph. Pigaches +1</feet>
            <ear1 />
        </set>
        <set name="BPPlus">
            <ammo>Sancus Sachet +1</ammo>
            <head>Glyphic Horn +1</head>
            <body>Con. Doublet +3</body>
            <hands>Convo. Bracers +3</hands>
            <legs>Beckoner's Spats</legs>
            <feet>Convo. Pigaches +3</feet>
            <neck>Caller's Pendant</neck>
            <ear1>Esper Earring</ear1>
            <ear2>Andoaa Earring</ear2>
            <ring1>Varar Ring</ring1>
            <ring2>Varar Ring</ring2>
        </set>
        <set name="SummonSkill">
            <head>Convoker's Horn +3</head>
            <body>Beckoner's Doublet</body>
            <hands>Glyphic Bracers +1</hands>
            <legs>Beckoner's Spats</legs>
            <neck>Caller's Pendant</neck>
            <ear1>Andoaa Earring</ear1>
            <ring1>Evoker's Ring</ring1>
            <back>Conveyance Cape</back>
        </set>
        <set name="TH" baseset="Idle">
            <head>Volte Cap</head>
            <body>Volte Jupon</body>
            <hands>Volte Bracers</hands>
            <legs>Volte Hose</legs>
            <feet>Volte Boots</feet>
            <waist>Chaac Belt</waist>
        </set>
        <include>
        </include>
    </sets>
    <init>
        <command>/macro book 7</command>
        <command delay="1000">/macro set 3</command>
        <command delay="1100">/echo [Switching to SMN Macros]</command>
        <command>/bind F9 /toggle</command>
        <command>/bind F10 /status</command>
    </init>
    <variables>
        <var name="toggle">0</var>
        <var name="Weapon">Nirvana</var>
        <var name="pet_element">nil</var>
    </variables>
    <inputcommands>
        <cmd input="/toggle">
            <if advanced="$toggle=1">
                <setvar name="Weapon" value="Nirvana" />
                <setvar name="toggle" value="0" />
                <doidlegear />
                <command>/echo [Nirvana]</command>
            </if>
            <else>
                <setvar name="Weapon" value="Hvergelmir" />
                <setvar name="toggle" value="1" />
                <doidlegear />
                <command>/echo [Hvergelmir]</command>
            </else>
        </cmd>
        <cmd input="/status">
            <equip>
                <back>Campestres's Cape</back>
            </equip>
            <doidlegear />
            <command>/echo [$Weapon]</command>
            <if buffactive="4|566">
                <command>/item "Panacea" me</command>
            </if>
            <elseif buffactive="6">
                <command>/item "Echo Drops" me</command>
            </elseif>
            <elseif buffactive="9|15">
                <equip lock="true">
                    <ring2>Purity Ring</ring2>
                </equip>
                <command>/item "Hallowed Water" me</command>
            </elseif>
            <elseif buffactive="11|12|21|128|129|130|131|132|133|134|135|136|137|138|139|140|141|142|144|145|146|147|148|149|174|175|404|557|558|559|560|561|562|563|564|567">
                <command>/item "Panacea" me</command>
            </elseif>
        </cmd>
        <cmd input="/bpplus">
            <equip set="BPPlus" />
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape">
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if pet_active="true">
            <if advanced="($pet_element=%e_dayelement)|($pet_element=%e_weatherelement)">
                <equip set="Perp">
                    <head>Convoker's Horn +2</head>
                    <body>Shomonjijoe +1</body>
                    <hands>Beckoner's Bracers</hands>
                </equip>
            </if>
            <else>
                <equip set="Perp" />
            </else>
        </if>
        <else>
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <if ad_skill="elementalmagic|enfeeblingmagic">
            <equip set="FastCast" >
                <waist />
            </equip>
        </if>
        <elseif ad_skill="summoning">
            <setvar name="pet_element" value="%ad_element" />
            <equip set="FastCast" />
        </elseif>
        <else>
            <equip set="FastCast" />
        </else>
    </premagic>
    <midmagic>
        <if ad_skill="elementalmagic">
            <equip set="Nuke" />
        </if>
        <if ad_skill="enfeeblingmagic">
            <equip set="Enfeeble" />
        </if>
        <if ad_name="Stoneskin|Metallic*|Diamondhide">
        <if buffactive="37">
            <command>/cancel 37</command>
        </if>
        </if>
        <if ad_name="Shock Spikes">
            <if buffactive="38">
                <command>/cancel 38</command>
            </if>
        </if>
    </midmagic>
    <jobability>
        <if ad_type="bloodpact*">
            <equip set="BPMinus" />
            <command delay="200">/bpplus</command>
        </if>
        <if ad_name="Elemental Siphon">
            <equip set="SummonSkill" />
        </if>
    </jobability>
    <weaponskill>
    </weaponskill>
</ashitacast>
