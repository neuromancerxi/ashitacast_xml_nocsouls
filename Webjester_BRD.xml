            <if advanced="$madrigal=2">
                <command>//blademadrigal</command>
                <setvar name="madrigal" value="1" />
            </if>
            <else>
                <command>//swordmadrigal</command>
                <setvar name="madrigal" value="2" />
            </else>
        </cmd>
        <cmd input="/march">
