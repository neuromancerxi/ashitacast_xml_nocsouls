            </if>
            <elseif advanced="$minne=4">
                <command>//knightsminne4</command>
                <setvar name="minne" value="3" />
            </elseif>
            <elseif advanced="$minne=3">
                <command>//knightsminne3</command>
                <setvar name="minne" value="2" />
            </elseif>
            <else>
                <command>//knightsminne2</command>
