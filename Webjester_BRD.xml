            <else>
                <command>//hordelullaby</command>
                <setvar name="hordelullaby" value="2" />
            </else>
        </cmd>
        <cmd input="/elegy">
            <if advanced="$elegy=2">
                <command>//carnageelegy</command>
                <setvar name="elegy" value="1" />
            </if>
            <else>
                <command>//battlefieldelegy</command>
                <setvar name="elegy" value="2" />
            </else>
        </cmd>
    </inputcommands>
    <idlegear>
        <if eq_back="Nexus Cape">
            <equip lock="true">
                <back>Nexus Cape</back>
            </equip>
        </if>
        <if p_status="engaged">
            <if p_joblevel="99">
                <equip set="$tptype" />
            </if>
            <else>
                <equip set="TP50" />
            </else>
        </if>
        <else>
            <equip set="Idle" />
        </else>
    </idlegear>
    <preranged>
    </preranged>
    <midranged>
    </midranged>
    <premagic>
        <equip set="FastCast" />
    </premagic>
    <midmagic>
        <if ad_skill="bluemagic|enfeeblingmagic|elementalmagic|darkmagic">
            <equip set="MACC" />
        </if>
        <if ad_type="bardsong">
            <if ad_name="*Scherzo*">
                <equip set="Songs">
                    <feet>Fili Cothurnes +1</feet>
                </equip>
            </if>
            <else>
                <equip set="Songs" />    
            </else>
        </if>
        <if ad_name="en*">
            <!--
                Enspell Augment Bonus applies when the spell is cast, not when it procs on melee strike.
            -->
            <equip set="Enspell" />
        </if>
        <if ad_name="Stoneskin|Metallic*|Diamondhide">
            <if buffactive="37">
                <command>/cancel 37</command>
            </if>
        </if>
        <if ad_name="Shock Spikes">
            <if buffactive="38">
                <command>/cancel 38</command>
            </if>
        </if>
    </midmagic>
    <jobability>
    </jobability>
    <weaponskill>
        <if ad_name="Gust*|Cyclone|Aeolian*">
            <equip set="MagWS" />
        </if>
        <else>
            <equip set="Standard">
                <ear1>Telos Earring</ear1>
                <neck>Fotia Gorget</neck>
                <waist>Fotia Belt</waist>
            </equip>
        </else>
    </weaponskill>
