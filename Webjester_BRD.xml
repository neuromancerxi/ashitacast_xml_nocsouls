        </cmd>
        <cmd input="/mambo">
            <if advanced="$mambo=2">
                <command>//dragonfoemambo</command>
                <setvar name="mambo" value="1" />
            </if>
            <else>
                <command>//sheepfoemambo</command>
                <setvar name="mambo" value="2" />
